                if (data.length > 0) {
                    var articles = JSON.parse(data);
                    var $availableList = $("#available-articles");
                    var $selectedList = $("#selected-articles");
                    $availableList.empty();
                    handleExistingArticle(articles, $availableList, $selectedList);
                }
