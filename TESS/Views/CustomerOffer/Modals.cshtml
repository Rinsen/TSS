                                                {
                                                    <td style='float:right; width:auto;'>@Maintenance</td>
                                                }

                                            </tr>
                                        </table>
                                    </button>
                                }
                                @{
                                    // Format currency
                                    if (discountMP < -100)
                                    {
                                        discountMP = -100;
                                    }
                                    if (discountLP < -100)
                                    {
                                        discountLP = -100;
                                    }

                                    String LicenseTotalStr = string.Format(se, "{0:C2}", LicenseTotal + LicenseTotal * (decimal)discountMP / 100).Replace(".", " ");
